{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\Windows\\System32\\cmd.exe",
                "args": [
                    "/d", "/c"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "renderer.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["build"]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "mingw32-make.exe all workplaceFolder=${workspaceFolder} outputExe=${workspaceFolderBasename}.exe",
            /*"options": {
                "env": {
                    "PATH": "C:\\raylib\\tcc\\;%PATH%"
                }
            },*/
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}